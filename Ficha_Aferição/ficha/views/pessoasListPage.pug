extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1
                span Lista de pessoas
                a.w3-btn.w3-round.w3-grey(href="/pessoas/registo")  +

    .w3-container
        table.w3-table-all
            tr
                th Nome
                th Actions
            each pessoa in PessoasArray
                tr
                    td
                        a(href="/pessoas/"+pessoa._id)= pessoa.nome
                    td
                        span [
                        a(href="/pessoas/edit/"+pessoa._id) Edit
                        span ]
                        span [
                            a(href="/pessoas/delete/"+pessoa._id) Delete
                        span ]
    footer.w3-container.w3-purple
        address
            span Gerado por Peixoto - [
                a(href="/pessoas") Voltar
                span ]