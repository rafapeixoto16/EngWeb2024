extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Formulario Periodo


        form.w3-container(method="POST")
            fieldset
                legend Form
                label Id
                input.w3-input.w3-round(type="text" name="periodo" required)

            br
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

        footer.w3-container.w3-purple
            h5
                span Peixoto in #{Date} - [
                a(href="/periodos") Return
                span ]