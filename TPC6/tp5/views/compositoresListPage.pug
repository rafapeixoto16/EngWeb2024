extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1
                span Lista de Compositores
                a.w3-btn.w3-round.w3-grey(href="/compositores/registo")  +

    .w3-container
        table.w3-table-all
            tr
                th Nome
                th Epoca
                th Actions
            each compositor in Compositores
                tr
                    td
                        a(href="/compositores/"+compositor._id)= compositor.nome
                    td
                        a(href="/periodos/"+compositor.periodo)= compositor.periodo
                    td
                        span [
                        a(href="/compositores/edit/"+compositor._id) Edit
                        span ]
                        span [
                            a(href="/compositores/delete/"+compositor._id) Delete
                        span ]
    footer.w3-container.w3-purple
        address
            span Gerado por ola em #{Date} - [
                a(href="/") Voltar
                span ]