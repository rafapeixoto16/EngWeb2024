extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1
                span Lista de periodos
                a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +


        .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th Actions
                each periodo in Periodos
                    tr
                        td
                            a(href="/periodos/" + periodo.periodo)= periodo.periodo
                        td
                            span [
                            a(href="/periodos/delete/" + periodo.periodo) Delete
                            span ]

    footer.w3-container.w3-purple
        address
            span Gerado por ola em #{Date} - [
                a(href="/") Voltar
                span ]